<Window x:Class="Dammen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dammen"
        mc:Ignorable="d"
        Title="Saca Checkers" WindowStartupLocation="CenterScreen" Background="{StaticResource ApplicationBackground}" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Menu HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <MenuItem Header="Game">
                <MenuItem x:Name="MiSaveAsScenario" Header="Save as scenario" Click="MiSaveAsScenario_Click"/>
                <MenuItem x:Name="MiReturnToMainMenu" Header="Return to main menu" Click="MiReturnToMainMenu_Click"/>
            </MenuItem>
        </Menu>
        <Frame HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="bodyFrame" NavigationUIVisibility="Hidden">
        </Frame>
    </StackPanel>
</Window>