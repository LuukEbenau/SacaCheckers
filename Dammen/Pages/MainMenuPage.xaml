<Page x:Class="Dammen.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Saca checkers" FontSize="32"/>
            <StackPanel Width="200" HorizontalAlignment="Center" Orientation="Vertical">
                <Button Padding="7" Margin="5" FontWeight="DemiBold" x:Name="BtnSinglePlayer" Content="Singleplayer" Click="BtnSinglePlayer_Click" />
                <Button Padding="7" Margin="5" FontWeight="DemiBold" x:Name="BtnMultiPlayer" Content="Multiplayer" Click="BtnMultiPlayer_Click"/>
                <Button Padding="7" Margin="5" FontWeight="DemiBold" x:Name="BtnScenarioOverview" Content="Scenario Overview" Click="BtnScenarioOverview_Click"/>
                <Button Padding="7" Margin="5" FontWeight="DemiBold" x:Name="BtnScenarioEditor" Content="Scenario Editor" Click="BtnScenarioEditor_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
