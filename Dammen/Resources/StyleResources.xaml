<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Dammen.Resources">
    <!--Design-->
    <SolidColorBrush x:Key="HeaderBackground" Color="#c2e4fc" />
    <SolidColorBrush x:Key="ApplicationBackground" Color="#f2fcfb" />

    <!--Turn history-->
    <SolidColorBrush x:Key="TurnHistory_HeaderBackground" Color="#5fbbfc" />
    <SolidColorBrush x:Key="TurnHistory_Row" Color="#d6eaff" />
    <SolidColorBrush x:Key="TurnHistory_Header" Color="#add6ff" />
    <Style x:Key="TurnHistory_Border" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource TurnHistory_HeaderBackground}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>
    <Style x:Key="TurnHistory_DoneTurnsStyle" TargetType="Grid">
        <Setter Property="Background" Value="#f2f2f2" />
    </Style>
    <Style x:Key="TurnHistory_DoneTurnItemStyle" TargetType="Grid">
        <Setter Property="Background" Value="DodgerBlue" />
    </Style>


    <Style x:Key="DefaultButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
</ResourceDictionary>